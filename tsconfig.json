{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",                  
    "noImplicitAny": true,                    
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES2015"],
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
